<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_title"
    android:layout_width="fill_parent" 
	android:layout_height="48dp"	
	android:background="@color/bluetwo"
	android:orientation="horizontal" 
	android:gravity="center_vertical">
	
    <Button
        android:id="@+id/btn_title_left"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btn_style_return" />
    
    
    <TextView android:id="@+id/txt_title_name"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:text="测试测试"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>	  
    
     <Button android:id="@+id/btn_title_right"
        android:background="@drawable/actionbar_bg_search"  
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_marginRight="10dp"/>
    
    
</LinearLayout>