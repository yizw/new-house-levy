<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tab3"
	android:background="@color/bluetwo" 
	android:layout_width="fill_parent" 
	android:layout_height="48dp">
	
   <TextView 
        android:id="@+id/tab3_actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/tab3_title_name"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>
    
    <ImageButton
        android:id="@+id/tab3_actionbar_left_exit"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_marginLeft="10dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:background="@drawable/actionbar_bg_exit"
        />

    <RelativeLayout
        android:id="@+id/tab3_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tab3_actionbar_left_exit" >

        <ImageButton
            android:id="@+id/tab3_actionbar_search"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/actionbar_bg_search"
            android:textSize="18sp" />
    </RelativeLayout>
    
</RelativeLayout>