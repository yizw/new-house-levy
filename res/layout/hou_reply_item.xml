<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView android:id="@+id/txt_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
      <TextView android:id="@+id/person_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      
      <TextView android:id="@+id/question_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      

   	<TextView android:id="@+id/txt_1"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_marginBottom="5dp"
       	android:layout_gravity="center_horizontal"
       	android:background="@drawable/chat_txt_bg"
       	android:textColor="@color/white"
       	android:text="2015-01-16 16:16:16"/>
    
   	<LinearLayout android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:background="@drawable/chat_left_bg"
        android:orientation="vertical">
        <TextView android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bluegreen"
            android:text="admin" />
        <TextView android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题已知悉，已将时限设置为10个工作日" />
    </LinearLayout>

</LinearLayout>