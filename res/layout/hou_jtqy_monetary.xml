<!--补偿计算单-集体企业-货币补偿
-->

<TabHost xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@android:id/tabhost"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">	
		
	<LinearLayout 
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">	   
	    
	 <LinearLayout  
        android:id="@+id/linear_title"
	    android:orientation="horizontal" 
	    android:background="@color/bluetwo" 
	    android:layout_width="fill_parent" 
	    android:layout_height="48dp"
	    android:gravity="center_vertical">
	
        <Button android:id="@+id/btn_title_left"
          android:background="@drawable/btn_style_return"  
          android:layout_height="36dp"
          android:layout_width="36dp"
          android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/txt_title_name"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_width="0dp"
          android:gravity="center_horizontal"
          android:text="集体企业货币补偿单"
          android:singleLine="true"
          android:ellipsize="end"
          android:textSize="20sp"
          android:textColor="@android:color/white"/>	    
        <Button android:id="@+id/btn_title_right"
          android:background="@drawable/btn_style_save"  
          android:layout_height="36dp"
          android:layout_width="36dp"
          android:layout_marginRight="10dp"/>
       </LinearLayout>
		
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="fill_parent" 
			android:layout_height="0dp"
			android:layout_weight="1" />
	
		<TabWidget android:id="@android:id/tabs" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:padding="2dip"
			android:background="@drawable/tab_widget_background"/>			
		
	</LinearLayout>
	
</TabHost>
