 <!--            
    分户-集体个人-确认表-tab4
   -->
   
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hou_jtgr_pro_mon_confirmtable_tab4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
  
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
       <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <LinearLayout style="@style/style_input_linear" 
	            android:layout_marginTop="5dp"
	            android:background="@drawable/preference_first_item">
	            <TextView android:id="@+id/txt_changearea"
	                style="@style/style_input_txt" android:text="住改非面积(㎡)"/>
	            <include layout="@layout/ty_input_split"/>
	            <EditText android:id="@+id/edit_changearea_x46"
	                android:inputType="numberDecimal"
	                style="@style/style_input_right"/>
	        </LinearLayout>
	          
	          <LinearLayout style="@style/style_input_linear" android:background="@drawable/preference_last_item">
	            <TextView android:id="@+id/txt_changeremark"
	                style="@style/style_input_txt" android:text="住改非备注"/>
	            <include layout="@layout/ty_input_split"/>
	            <EditText android:id="@+id/edit_changeremark"
	                style="@style/style_input_right"/>
	        </LinearLayout>
	         
        <LinearLayout android:id="@+id/linear_change"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="10dp">
        
	        <LinearLayout style="@style/style_input_linear" 
	            android:background="@drawable/preference_single_item">
	            <TextView style="@style/style_input_txt" android:text="确认表备注"/>
	            <include layout="@layout/ty_input_split"/>
	            <EditText android:id="@+id/edit_remark" 
	                style="@style/style_input_right"/>
	        </LinearLayout>
	         </LinearLayout>
	         
          <LinearLayout android:id="@+id/linear_maininquirer"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="10dp">
	        
	        <LinearLayout style="@style/style_input_linear" 
	            android:background="@drawable/preference_single_item">
	            <TextView style="@style/style_input_txt_blue"
	                android:text="主调查人"/>
	            <include layout="@layout/ty_input_split"/>
	           <TextView android:id="@+id/text_maininquirer_x218"
	                style="@style/style_input_right"/>
	        </LinearLayout>	        
	         </LinearLayout>
        
        
	    </LinearLayout>
    </LinearLayout>      
    </ScrollView>
